{% extends 'base.twig' %}

{% block title %}Send request{% endblock %}

{% block content %}
    <section class="section">
        <div class="container">
            <div class="columns is-centered">
                <div class="column box is-two-thirds">
                    <h1 class="title is-1">Send a friend request</h1>

                    <form action="/user/friendRequests/send" method="POST" accept-charset="utf-8">
                        <div class="field">
                            <label class="label">Who do you want to recibe your request?</label>
                            <p class="control has-icons-left">
                                <input class="input" type="text" name="newFriend" placeholder="Friend username" value="">

                                <span class="icon is-small is-left">
                                            <i class="fas fa-address-book"></i>
                                        </span>
                            </p>
                        </div>

                        <div class="field">
                            <p class="control">
                                <input type="submit" class="button is-success " value="Send request" >
                            </p>
                        </div>
                        {% if error %}
                            <p class="help is-danger">{{ error.requestError }}</p>
                        {% endif %}
                    </form>

                </div>
            </div>
        </div>
    </section>

{% endblock %}